<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/user.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="user-form" action="/admin/<% if (editing) { %>edit-user<% } else { %>add-user <% } %>" method="POST">
            <div class="form-control">
                <label for="firstName">First Name</label>
                <input type="text" name="firstName" id="firstName" value="<% if (editing) { %><%=person.first_name %><% } %>">
            </div>
            <div class="form-control">
                <label for="lastName">Last Name</label>
                <input type="text" name="lastName" id="lastName" value="<% if (editing) { %><%=person.last_name %><% } %>">
            </div>
            <div class="form-control">
                <label for="email">Email </label>
                <input type="text" name="email" id="email" value="<% if (editing) { %><%=person.email %><% } %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%=person.avatar %><% } %>">
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%=person.id %>" name="userId">
                <% } %>
         
            <button class="btn" type="submit"><% if (editing) { %> Update User <% } else { %> Add User <% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>